# Example Environment Configuration
# Copy this file to .env.local and update with your values

# Environment (local, production)
ENVIRONMENT=local

# Debug mode
DEBUG=true

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Server settings
HOST=0.0.0.0
PORT=8000
RELOAD=true

# Microsoft Teams Webhook URL
# Get your webhook URL from Teams:
# 1. Go to your Teams channel
# 2. Click on the three dots (...) next to the channel name
# 3. Select "Connectors" or "Workflows"
# 4. Search for "Incoming Webhook"
# 5. Configure and copy the webhook URL
TEAMS_WEBHOOK_URL=https://your-org.webhook.office.com/webhookb2/your-webhook-url

# Email/SMTP Settings
# Configure your SMTP server for sending email notifications
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true
SENDER_EMAIL=your-email@gmail.com
SENDER_NAME=Notification Service

# CORS Origins (comma-separated, use * for all origins)
CORS_ORIGINS=*
